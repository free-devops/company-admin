<h2 class="pt-5 pb-2">New employee</h2>	
<form id="new-employee-form">
	<div class="form-group">
		<label>Name:</label>
		{{input type="text" class="form-control" value=employee.name placeholder="Name"}}
		{{#if (v-get employee 'name' 'isInvalid')}}
		<div class="required-info">
			<p><small>This field is required.</small></p>
		</div>
		{{/if}}
	</div>
    <div class="form-group">
		<label>Surname:</label>
		{{input type="text" class="form-control" value=employee.surname placeholder="Surname"}}
		{{#if (v-get employee 'surname' 'isInvalid')}}
		<div class="required-info">
			<p><small>This field is required.</small></p>
		</div>
		{{/if}}
	</div>
    <div class="form-group">
		<label>Address:</label>
		{{input type="text" class="form-control" value=employee.address placeholder="Address"}}
	</div>
    <div class="form-group">
		<label>Email:</label>
		{{input type="text" class="form-control" value=employee.email placeholder="Email"}}
		{{#if (v-get employee 'email' 'isInvalid')}}
		<div class="required-info">
			<p><small>This field is required.</small></p>
		</div>
		{{/if}}
	</div>
	<div class="form-group">
		<label>Salary:</label>
		{{input type="text" class="form-control" value=employee.salary placeholder="Salary"}}
		{{#if (v-get employee 'salary' 'isInvalid')}}
		<div class="required-info">
			<p><small>Salary is invalid.</small></p>
		</div>
		{{/if}}
	</div>
	<button {{action 'addEmployee'}} class="btn btn-primary" disabled={{v-get employee 'isInvalid'}}>Submit</button> 
	<button {{action 'goToCompanyPage'}} class="btn btn-default">Back</button> 
</form>

<BsModal @open={{savedEmployee}} @fade=false @size=null @onSubmit={{action "goToCompanyPage"}} as |Modal|>
  <Modal.header>
    <h4 class="modal-title">Success</h4>
  </Modal.header>
  <Modal.body>
    Employee <strong>{{savedEmployee}}</strong> is successfully saved!
  </Modal.body>
  <Modal.footer as |footer|>
    <BsButton @onClick={{action Modal.submit}} @type="success">Ok</BsButton>
  </Modal.footer>
</BsModal>

